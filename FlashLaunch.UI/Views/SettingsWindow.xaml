<Window x:Class="FlashLaunch.UI.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{DynamicResource Settings_Title}"
        Height="480"
        Width="780"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="False"
        Background="{DynamicResource ShellBackgroundBrush}"
        KeyDown="OnWindowKeyDown">

    <Window.Resources>
        <!-- ComboBox trong Settings: dùng template custom của theme, nhưng thu nhỏ padding/chiều cao -->
        <Style x:Key="SettingsFieldComboBox"
               TargetType="ComboBox"
               BasedOn="{StaticResource SettingsComboBoxStyle}">
            <Setter Property="Padding" Value="6,2" />
            <Setter Property="MinHeight" Value="26" />
        </Style>

        <!-- Dropdown menu option buttons -->
        <Style x:Key="SettingsDropdownOptionButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Foreground" Value="{DynamicResource ControlForegroundBrush}" />
            <Setter Property="Padding" Value="12,6" />
            <Setter Property="HorizontalContentAlignment" Value="Left" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Root"
                                Background="{TemplateBinding Background}">
                            <ContentPresenter VerticalAlignment="Center"
                                              HorizontalAlignment="Left" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Root" Property="Background" Value="{DynamicResource AccentBrush}" />
                                <Setter Property="Foreground" Value="White" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Root" Property="Background" Value="{DynamicResource AccentBrush}" />
                                <Setter Property="Foreground" Value="White" />
                                <Setter TargetName="Root" Property="Opacity" Value="0.85" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Root" Property="Opacity" Value="0.4" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SettingsSecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource SettingsButtonStyle}">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="{DynamicResource AccentBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource AccentBrush}" />
        </Style>

        <Style x:Key="SettingsGhostButtonStyle" TargetType="Button" BasedOn="{StaticResource SettingsButtonStyle}">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}" />
            <Setter Property="Padding" Value="12,6" />
        </Style>

        <Style x:Key="SettingsNavButtonStyle" TargetType="ToggleButton">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Padding" Value="8,4" />
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="Root"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8">
                            <Grid Margin="6,4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0"
                                           FontFamily="Segoe Fluent Icons"
                                           FontSize="14"
                                           Text="{TemplateBinding Tag}"
                                           Foreground="{TemplateBinding Foreground}"
                                           VerticalAlignment="Center"
                                           Margin="0,0,8,0" />
                                <StackPanel Grid.Column="1" Orientation="Vertical">
                                    <TextBlock x:Name="Label"
                                               Text="{TemplateBinding Content}"
                                               Foreground="{TemplateBinding Foreground}"
                                               VerticalAlignment="Center" />
                                    <Border x:Name="Underline"
                                            Height="2"
                                            Margin="0,4,0,0"
                                            CornerRadius="1"
                                            Background="Transparent" />
                                </StackPanel>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Root" Property="Background" Value="{DynamicResource SettingsNavItemHoverBrush}" />
                                <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}" />
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Root" Property="Background" Value="{DynamicResource SettingsNavItemActiveBrush}" />
                                <Setter TargetName="Underline" Property="Background" Value="{DynamicResource SettingsNavItemActiveBorderBrush}" />
                                <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Root" Property="Opacity" Value="0.6" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SettingsDropdownMenu" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource PanelBackgroundBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource ControlBorderBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="6" />
            <Setter Property="SnapsToDevicePixels" Value="True" />
        </Style>

        <Style x:Key="SettingsSectionCard" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource CardBackgroundBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource CardBorderBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="14" />
            <Setter Property="Padding" Value="20" />
            <Setter Property="Margin" Value="0,0,0,24" />
            <Setter Property="SnapsToDevicePixels" Value="True" />
        </Style>

        <Style x:Key="SettingsSectionHeaderIcon" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe Fluent Icons" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Foreground" Value="{DynamicResource AccentBrush}" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Margin" Value="0,0,8,0" />
        </Style>

        <Style x:Key="SettingsSectionHeaderText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Foreground" Value="{DynamicResource AccentBrush}" />
        </Style>

        <!-- CheckBox style cho Settings -->
        <Style x:Key="SettingsCheckBoxStyle" TargetType="CheckBox">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}" />
            <Setter Property="Padding" Value="8,4" />
            <Setter Property="Margin" Value="0,0,0,8" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Border Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}">
                            <StackPanel Orientation="Horizontal">
                                <Border x:Name="CheckBorder"
                                        Width="18"
                                        Height="18"
                                        Background="{DynamicResource ControlBackgroundBrush}"
                                        BorderBrush="{DynamicResource ControlBorderBrush}"
                                        BorderThickness="1"
                                        CornerRadius="3">
                                    <Path x:Name="CheckMark"
                                          Data="M 0 3 L 5 8 L 12 0"
                                          Stroke="{DynamicResource AccentBrush}"
                                          StrokeThickness="2"
                                          Fill="Transparent"
                                          Stretch="Uniform"
                                          Margin="2"
                                          Visibility="Collapsed" />
                                </Border>
                                <ContentPresenter Margin="8,0,0,0"
                                                  VerticalAlignment="Center" />
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="CheckMark" Property="Visibility" Value="Visible" />
                                <Setter TargetName="CheckBorder" Property="Background" Value="{DynamicResource AccentBrush}" />
                                <Setter TargetName="CheckBorder" Property="BorderBrush" Value="{DynamicResource AccentBrush}" />
                                <Setter TargetName="CheckMark" Property="Stroke" Value="White" />
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="CheckBorder" Property="BorderBrush" Value="{DynamicResource AccentBrush}" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="CheckBorder" Property="Opacity" Value="0.5" />
                                <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- TextBox style cho Settings -->
        <Style x:Key="SettingsTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="{DynamicResource ControlBackgroundBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource ControlBorderBrush}" />
            <Setter Property="Foreground" Value="{DynamicResource ControlForegroundBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <!-- Tăng nhẹ chiều cao/padding để text không bị cảm giác cắt mép trên/dưới -->
            <Setter Property="Padding" Value="10,5" />
            <Setter Property="MinHeight" Value="34" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="Border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          Margin="{TemplateBinding Padding}"
                                          VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="{DynamicResource AccentBrush}" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Border" Property="Opacity" Value="0.5" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Button style cho Settings (không phải primary) -->
        <Style x:Key="SettingsButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource ControlBackgroundBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource ControlBorderBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Foreground" Value="{DynamicResource ControlForegroundBrush}" />
            <Setter Property="Padding" Value="12,6" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Root"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Root" Property="Background" Value="{DynamicResource AccentBrush}" />
                                <Setter TargetName="Root" Property="BorderBrush" Value="{DynamicResource AccentBrush}" />
                                <Setter Property="Foreground" Value="White" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Root" Property="Opacity" Value="0.8" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Root" Property="Opacity" Value="0.5" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- TabControl riêng cho Settings: đảm bảo strip tab dùng nền tối đồng bộ -->
        <Style x:Key="SettingsTabControlStyle" TargetType="TabControl">
            <Setter Property="Background" Value="{DynamicResource PanelBackgroundBrush}" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabControl">
                        <Grid KeyboardNavigation.TabNavigation="Local">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <Border Grid.Row="0"
                                    Background="{DynamicResource PanelBackgroundBrush}"
                                    Padding="4">
                                <ScrollViewer HorizontalScrollBarVisibility="Auto"
                                              VerticalScrollBarVisibility="Disabled"
                                              Focusable="False"
                                              CanContentScroll="False">
                                    <StackPanel x:Name="HeaderPanel"
                                                Orientation="Horizontal"
                                                IsItemsHost="True"
                                                Margin="4,0,4,-2" />
                                </ScrollViewer>
                            </Border>

                            <Border Grid.Row="1"
                                    Background="{DynamicResource ShellBackgroundBrush}"
                                    Padding="0,12,0,0">
                                <ContentPresenter x:Name="PART_SelectedContentHost"
                                                  ContentSource="SelectedContent" />
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="{DynamicResource ShellBackgroundBrush}"
            CornerRadius="16"
            Padding="0"
            Effect="{DynamicResource DropShadow}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0"
                  Background="{DynamicResource PanelBackgroundBrush}"
                  MouseLeftButtonDown="OnHeaderMouseDown">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock Text="{DynamicResource Settings_Title}"
                           VerticalAlignment="Center"
                           Margin="16,0,0,0"
                           FontWeight="SemiBold" />
                <Button Grid.Column="1"
                        Content="✕"
                        Width="30"
                        Height="24"
                        Margin="0,8,8,8"
                        Padding="0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Click="OnCancelClick" />
            </Grid>

            <!-- Content -->
            <Grid Grid.Row="1" Margin="24">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Vùng nội dung: sidebar nav + nội dung cuộn -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="180" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- Sidebar navigation -->
                    <Border Grid.Column="0"
                            Margin="0,0,16,0"
                            Background="{DynamicResource SettingsNavBackgroundBrush}"
                            CornerRadius="12"
                            BorderThickness="0,0,1,0"
                            BorderBrush="{DynamicResource PanelBorderBrush}">
                        <StackPanel Margin="8,12,8,12">
                            <TextBlock Text="{DynamicResource Settings_Title}"
                                       FontSize="13"
                                       FontWeight="SemiBold"
                                       Margin="4,0,4,12" />

                            <ToggleButton x:Name="NavGeneralButton"
                                          Tag=""
                                          Content="{DynamicResource Settings_Tab_General}"
                                          Margin="0,0,0,4"
                                          Style="{StaticResource SettingsNavButtonStyle}"
                                          Click="OnNavGeneralClick" />

                            <ToggleButton x:Name="NavAppearanceButton"
                                          Tag=""
                                          Content="{DynamicResource Settings_Tab_Appearance}"
                                          Margin="0,0,0,4"
                                          Style="{StaticResource SettingsNavButtonStyle}"
                                          Click="OnNavAppearanceClick" />

                            <ToggleButton x:Name="NavPluginsButton"
                                          Tag=""
                                          Content="{DynamicResource Settings_Tab_Plugins}"
                                          Margin="0,0,0,4"
                                          Style="{StaticResource SettingsNavButtonStyle}"
                                          Click="OnNavPluginsClick" />

                            <ToggleButton x:Name="NavAdvancedButton"
                                          Tag=""
                                          Content="{DynamicResource Settings_Tab_Advanced}"
                                          Margin="0,0,0,4"
                                          Style="{StaticResource SettingsNavButtonStyle}"
                                          Click="OnNavAdvancedClick" />
                        </StackPanel>
                    </Border>

                    <!-- Nội dung settings -->
                    <ScrollViewer Grid.Column="1"
                                  x:Name="XamlContentRoot"
                                  VerticalScrollBarVisibility="Auto"
                                  Padding="0,0,20,0">
                        <ScrollViewer.Resources>
                            <Style TargetType="ScrollBar" BasedOn="{StaticResource SettingsVerticalScrollBarStyle}" />
                        </ScrollViewer.Resources>
                        <StackPanel Orientation="Vertical" Margin="0,0,12,0">
                            <!-- General page -->
                            <StackPanel x:Name="GeneralContentPanel"
                                        Orientation="Vertical">
                                <!-- General: chỉ hotkey -->
                                <TextBlock x:Name="GeneralSectionHeader"
                                           Text="{DynamicResource Settings_Tab_General}"
                                           FontSize="16"
                                           FontWeight="SemiBold"
                                           Margin="0,0,0,8" />
                                <Border Style="{StaticResource SettingsSectionCard}">
                                    <StackPanel>
                                        <DockPanel Margin="0,0,0,12">
                                            <TextBlock Style="{StaticResource SettingsSectionHeaderText}"
                                                       Text="{DynamicResource Settings_GlobalHotkey}" />
                                        </DockPanel>
                                        <TextBox Margin="0,8,0,0"
                                                 Text="{Binding Hotkey}"
                                                 Style="{StaticResource SettingsTextBoxStyle}" />

                                        <TextBlock Margin="0,8,0,0"
                                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                                   FontStyle="Italic"
                                                   Text="{DynamicResource Settings_Hotkey_Hint}" />
                                    </StackPanel>
                                </Border>
                            </StackPanel>

                            <!-- Appearance page -->
                            <StackPanel x:Name="AppearanceContentPanel"
                                        Orientation="Vertical"
                                        Visibility="Collapsed">
                                <!-- Appearance: ngôn ngữ, theme, hiển thị kết quả -->
                                <TextBlock x:Name="AppearanceSectionHeader"
                                           Text="{DynamicResource Settings_Tab_Appearance}"
                                           FontSize="16"
                                           FontWeight="SemiBold"
                                           Margin="0,0,0,8" />

                                <!-- Language -->
                                <Border Style="{StaticResource SettingsSectionCard}">
                                    <StackPanel>
                                        <DockPanel Margin="0,0,0,12">
                                            <TextBlock Style="{StaticResource SettingsSectionHeaderText}"
                                                       Text="{DynamicResource Settings_Language}" />
                                        </DockPanel>
                                        <Grid Margin="0,8,0,0">
                                            <Button x:Name="LanguageDropdownButton"
                                                    Width="220"
                                                    HorizontalAlignment="Left"
                                                    Background="{DynamicResource ControlBackgroundBrush}"
                                                    BorderBrush="{DynamicResource ControlBorderBrush}"
                                                    BorderThickness="1"
                                                    Foreground="{DynamicResource ControlForegroundBrush}"
                                                    Padding="10,4"
                                                    Click="OnLanguageButtonClick">
                                                <DockPanel>
                                                    <TextBlock VerticalAlignment="Center">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="Text" Value="{DynamicResource Settings_Language_English}" />
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding Language}" Value="vi">
                                                                        <Setter Property="Text" Value="{DynamicResource Settings_Language_Vietnamese}" />
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                    <Path DockPanel.Dock="Right"
                                                          Margin="8,0,0,0"
                                                          Data="M 0 0 L 4 4 L 8 0 Z"
                                                          Width="12"
                                                          Height="6"
                                                          Stretch="Uniform"
                                                          Fill="{DynamicResource ControlForegroundBrush}"
                                                          VerticalAlignment="Center" />
                                                </DockPanel>
                                            </Button>
                                            <Popup x:Name="LanguagePopup"
                                                   PlacementTarget="{Binding ElementName=LanguageDropdownButton}"
                                                   Placement="Bottom"
                                                   StaysOpen="False"
                                                   AllowsTransparency="True">
                                                <Border Style="{StaticResource SettingsDropdownMenu}"
                                                        Width="{Binding ActualWidth, ElementName=LanguageDropdownButton}">
                                                    <StackPanel>
                                                        <Button Content="{DynamicResource Settings_Language_English}"
                                                                Tag="en"
                                                                Style="{StaticResource SettingsDropdownOptionButton}"
                                                                Click="OnLanguageOptionClick" />
                                                        <Button Content="{DynamicResource Settings_Language_Vietnamese}"
                                                                Tag="vi"
                                                                Style="{StaticResource SettingsDropdownOptionButton}"
                                                                Click="OnLanguageOptionClick" />
                                                    </StackPanel>
                                                </Border>
                                            </Popup>
                                        </Grid>
                                    </StackPanel>
                                </Border>

                                <!-- Theme -->
                                <Border Style="{StaticResource SettingsSectionCard}">
                                    <StackPanel>
                                        <DockPanel Margin="0,0,0,12">
                                            <TextBlock Style="{StaticResource SettingsSectionHeaderText}"
                                                       Text="{DynamicResource Settings_Theme}" />
                                        </DockPanel>
                                        <Grid Margin="0,8,0,0">
                                            <Button x:Name="ThemeDropdownButton"
                                                    Width="220"
                                                    HorizontalAlignment="Left"
                                                    Background="{DynamicResource ControlBackgroundBrush}"
                                                    BorderBrush="{DynamicResource ControlBorderBrush}"
                                                    BorderThickness="1"
                                                    Foreground="{DynamicResource ControlForegroundBrush}"
                                                    Padding="10,4"
                                                    Click="OnThemeButtonClick">
                                                <DockPanel>
                                                    <TextBlock VerticalAlignment="Center">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="Text" Value="{DynamicResource Settings_Theme_System}" />
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding Theme}" Value="Light">
                                                                        <Setter Property="Text" Value="{DynamicResource Settings_Theme_Light}" />
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Theme}" Value="Dark">
                                                                        <Setter Property="Text" Value="{DynamicResource Settings_Theme_Dark}" />
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                    <Path DockPanel.Dock="Right"
                                                          Margin="8,0,0,0"
                                                          Data="M 0 0 L 4 4 L 8 0 Z"
                                                          Width="12"
                                                          Height="6"
                                                          Stretch="Uniform"
                                                          Fill="{DynamicResource ControlForegroundBrush}"
                                                          VerticalAlignment="Center" />
                                                </DockPanel>
                                            </Button>
                                            <Popup x:Name="ThemePopup"
                                                   PlacementTarget="{Binding ElementName=ThemeDropdownButton}"
                                                   Placement="Bottom"
                                                   StaysOpen="False"
                                                   AllowsTransparency="True">
                                                <Border Style="{StaticResource SettingsDropdownMenu}"
                                                        Width="{Binding ActualWidth, ElementName=ThemeDropdownButton}">
                                                    <StackPanel>
                                                        <Button Content="{DynamicResource Settings_Theme_System}"
                                                                Tag="System"
                                                                Style="{StaticResource SettingsDropdownOptionButton}"
                                                                Click="OnThemeOptionClick" />
                                                        <Button Content="{DynamicResource Settings_Theme_Light}"
                                                                Tag="Light"
                                                                Style="{StaticResource SettingsDropdownOptionButton}"
                                                                Click="OnThemeOptionClick" />
                                                        <Button Content="{DynamicResource Settings_Theme_Dark}"
                                                                Tag="Dark"
                                                                Style="{StaticResource SettingsDropdownOptionButton}"
                                                                Click="OnThemeOptionClick" />
                                                    </StackPanel>
                                                </Border>
                                            </Popup>
                                        </Grid>
                                    </StackPanel>
                                </Border>

                                <!-- Result display -->
                                <Border Style="{StaticResource SettingsSectionCard}">
                                    <StackPanel>
                                        <DockPanel Margin="0,0,0,12">
                                            <TextBlock Style="{StaticResource SettingsSectionHeaderText}"
                                                       Text="{DynamicResource Settings_ResultDisplay}" />
                                        </DockPanel>
                                        <StackPanel Margin="0,12,0,0">
                                            <CheckBox Content="{DynamicResource Settings_ShowResultIcons}"
                                                      IsChecked="{Binding ShowResultIcons}"
                                                      Style="{StaticResource SettingsCheckBoxStyle}"
                                                      Margin="0,0,0,12" />
                                            <CheckBox Content="{DynamicResource Settings_ShowPluginBadges}"
                                                      IsChecked="{Binding ShowPluginBadges}"
                                                      Style="{StaticResource SettingsCheckBoxStyle}" />
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </StackPanel>

                            <!-- Plugins page -->
                            <StackPanel x:Name="PluginsContentPanel"
                                        Orientation="Vertical"
                                        Visibility="Collapsed">
                                <!-- Plugins & commands -->
                                <TextBlock x:Name="PluginsSectionHeader"
                                           Text="{DynamicResource Settings_Tab_Plugins}"
                                           FontSize="16"
                                           FontWeight="SemiBold"
                                           Margin="0,0,0,8" />

                                <!-- Plugins -->
                                <Border Style="{StaticResource SettingsSectionCard}">
                                    <StackPanel>
                                        <DockPanel Margin="0,0,0,12">
                                            <TextBlock Style="{StaticResource SettingsSectionHeaderText}"
                                                       Text="{DynamicResource Settings_Plugins}" />
                                            <Button DockPanel.Dock="Right"
                                                    Content="{DynamicResource Settings_Plugins_HealthCheck}"
                                                    Style="{StaticResource SettingsButtonStyle}"
                                                    Margin="0,0,8,0"
                                                    Click="OnHealthCheckPluginsClick" />
                                            <Button DockPanel.Dock="Right"
                                                    Content="{DynamicResource Settings_ReloadPlugins}"
                                                    Style="{StaticResource SettingsButtonStyle}"
                                                    Click="OnReloadPluginsClick" />
                                        </DockPanel>
                                        <ItemsControl Margin="0,12,0,0"
                                                      ItemsSource="{Binding PluginToggles}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <CheckBox IsChecked="{Binding IsEnabled}"
                                                              Content="{Binding Name}"
                                                              Style="{StaticResource SettingsCheckBoxStyle}" />
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                </Border>

                                <!-- Web search providers -->
                                <Border Style="{StaticResource SettingsSectionCard}">
                                    <StackPanel>
                                        <DockPanel Margin="0,0,0,12">
                                            <TextBlock Style="{StaticResource SettingsSectionHeaderText}"
                                                       Text="{DynamicResource Settings_WebSearch_Providers}" />
                                        </DockPanel>
                                        <ItemsControl Margin="0,12,0,0"
                                                      ItemsSource="{Binding WebSearchProviders}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <CheckBox IsChecked="{Binding IsEnabled}"
                                                              Content="{Binding DisplayName}"
                                                              Style="{StaticResource SettingsCheckBoxStyle}" />
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                </Border>

                                <!-- System commands -->
                                <Border Style="{StaticResource SettingsSectionCard}">
                                    <StackPanel>
                                        <DockPanel Margin="0,0,0,12">
                                            <TextBlock Style="{StaticResource SettingsSectionHeaderText}"
                                                       Text="{DynamicResource Settings_SystemCommands}" />
                                        </DockPanel>
                                        <ItemsControl Margin="0,12,0,0"
                                                      ItemsSource="{Binding SystemCommandToggles}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <CheckBox IsChecked="{Binding IsEnabled}"
                                                              Content="{Binding DisplayName}"
                                                              Style="{StaticResource SettingsCheckBoxStyle}" />
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                </Border>
                            </StackPanel>

                            <!-- Advanced page -->
                            <StackPanel x:Name="AdvancedContentPanel"
                                        Orientation="Vertical"
                                        Visibility="Collapsed">
                                <!-- Advanced (folders & maintenance) -->
                                <TextBlock x:Name="AdvancedSectionHeader"
                                           Text="{DynamicResource Settings_Tab_Advanced}"
                                           FontSize="16"
                                           FontWeight="SemiBold"
                                           Margin="0,0,0,8" />

                                <!-- Additional app folders -->
                                <Border Style="{StaticResource SettingsSectionCard}">
                                    <StackPanel>
                                        <DockPanel Margin="0,0,0,12">
                                            <TextBlock Style="{StaticResource SettingsSectionHeaderText}"
                                                       Text="{DynamicResource Settings_AdditionalAppFolders}" />
                                        </DockPanel>

                                        <Grid Margin="0,12,0,12">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <TextBox Grid.Column="0"
                                                     Text="{Binding NewDirectoryPath, UpdateSourceTrigger=PropertyChanged}"
                                                     Style="{StaticResource SettingsTextBoxStyle}" />

                                            <Button Grid.Column="1"
                                                    Margin="8,0,0,0"
                                                    Content="{DynamicResource Settings_Browse}"
                                                    Style="{StaticResource SettingsButtonStyle}"
                                                    Click="OnBrowseDirectoryClick" />

                                            <Button Grid.Column="2"
                                                    Margin="8,0,0,0"
                                                    Content="{DynamicResource Common_Add}"
                                                    Style="{StaticResource SettingsButtonStyle}"
                                                    Click="OnAddDirectoryClick" />
                                        </Grid>

                                        <ItemsControl ItemsSource="{Binding CustomDirectories}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <DockPanel Margin="0,0,0,4">
                                                        <TextBlock Text="{Binding}"
                                                                   VerticalAlignment="Center" />
                                                        <Button Content="{DynamicResource Common_Remove}"
                                                                DockPanel.Dock="Right"
                                                                Margin="8,0,0,0"
                                                                Tag="{Binding}"
                                                                Style="{StaticResource SettingsButtonStyle}"
                                                                Click="OnRemoveDirectoryClick" />
                                                    </DockPanel>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>

                                        <TextBlock Margin="0,8,0,0"
                                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                                   Text="{DynamicResource Settings_AdditionalFolders_Empty}">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding CustomDirectories.Count}" Value="0">
                                                            <Setter Property="Visibility" Value="Visible" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </StackPanel>
                                </Border>

                                <!-- Maintenance actions -->
                                <Border Style="{StaticResource SettingsSectionCard}">
                                    <StackPanel>
                                        <DockPanel Margin="0,0,0,12">
                                            <TextBlock Style="{StaticResource SettingsSectionHeaderText}"
                                                       Text="{DynamicResource Settings_Maintenance}" />
                                        </DockPanel>
                                        <CheckBox Content="{DynamicResource Settings_IconCache_Enable}"
                                                  IsChecked="{Binding PersistentIconCacheEnabled}"
                                                  Style="{StaticResource SettingsCheckBoxStyle}"
                                                  Margin="0,0,0,12" />
                                        <WrapPanel HorizontalAlignment="Left"
                                                   VerticalAlignment="Center"
                                                   ItemWidth="Auto"
                                                   ItemHeight="Auto">
                                            <Button Content="{DynamicResource Settings_RefreshIndex}"
                                                    Width="150"
                                                    Margin="0,0,16,8"
                                                    Style="{StaticResource SettingsButtonStyle}"
                                                    Click="OnRefreshIndexClick" />
                                            <Button Content="{DynamicResource Settings_ResetUsageLogs}"
                                                    Width="170"
                                                    Margin="0,0,16,8"
                                                    Style="{StaticResource SettingsButtonStyle}"
                                                    Click="OnResetUsageLogsClick" />
                                            <Button Content="{DynamicResource Settings_IconCache_Clear}"
                                                    Width="170"
                                                    Margin="0,0,0,8"
                                                    Style="{StaticResource SettingsButtonStyle}"
                                                    Click="OnClearIconCacheClick" />
                                        </WrapPanel>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>

                <!-- Validation + actions -->
                <Grid Grid.Row="1" Margin="0,16,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0"
                                Orientation="Vertical"
                                Margin="0,0,16,0">
                        <TextBlock Text="{Binding ValidationMessage}"
                                   Margin="0,0,0,4"
                                   Visibility="{Binding ValidationMessage, Converter={StaticResource NullToVisibilityConverter}}">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsValidationError}" Value="True">
                                            <Setter Property="Foreground" Value="{DynamicResource ErrorBrush}" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>

                    <StackPanel Grid.Column="1"
                                Orientation="Horizontal"
                                HorizontalAlignment="Right">
                        <Button Content="{DynamicResource Settings_Ok}"
                                Width="80"
                                Margin="0,0,8,0"
                                Style="{DynamicResource PrimaryButtonStyle}"
                                IsDefault="True"
                                Click="OnOkClick" />
                        <Button Content="{DynamicResource Settings_Cancel}"
                                Width="80"
                                Margin="0,0,8,0"
                                Style="{StaticResource SettingsButtonStyle}"
                                IsCancel="True"
                                Click="OnCancelClick" />
                        <Button Content="{DynamicResource Settings_Apply}"
                                Width="80"
                                Style="{StaticResource SettingsButtonStyle}"
                                Click="OnApplyClick" />
                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Window>
