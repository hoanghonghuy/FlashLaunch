<Window x:Class="FlashLaunch.UI.Views.ConfirmDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        Background="Transparent"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterOwner"
        Topmost="True">
    <Border Background="#202020"
            CornerRadius="12"
            Padding="24"
            BorderBrush="#444444"
            BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="12" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="20" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock x:Name="TitleText"
                       FontSize="18"
                       FontWeight="SemiBold"
                       Foreground="White" />

            <TextBlock x:Name="MessageText"
                       Grid.Row="2"
                       FontSize="14"
                       Foreground="#DDFFFFFF"
                       TextWrapping="Wrap"
                       MaxWidth="480" />

            <StackPanel Grid.Row="4"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <Button x:Name="CancelButton"
                        Width="84"
                        Margin="0,0,8,0"
                        Content="{DynamicResource Common_Cancel}"
                        IsCancel="True"
                        Padding="8,4"
                        Background="#333333"
                        Foreground="White"
                        BorderBrush="#555555"
                        Click="OnCancelClick" />
                <Button x:Name="OkButton"
                        Width="84"
                        Content="{DynamicResource Common_Ok}"
                        IsDefault="True"
                        Padding="8,4"
                        Background="#0078D7"
                        Foreground="White"
                        BorderBrush="#0088FF"
                        Click="OnOkClick" />
            </StackPanel>
        </Grid>
    </Border>
</Window>
